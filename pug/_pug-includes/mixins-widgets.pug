
mixin widgetStats1(val, index, classname)
    // Widget Type 1
    .mb-4(class=classname)
        .card.h-100
            .card-body
                .d-flex.align-items-center.justify-content-between
                    div
                        h4.fw-normal(class=val.textClass) #{val.value}
                        p.subtitle.text-sm.text-muted.mb-0 #{val.title}
                    .flex-shrink-0.ms-3
                        +svgIcon(val.icon1, val.textClass)
            .card-footer.py-3(class=`bg-${val.bgClass}-light`)
                .row.align-items-center(class=val.textClass)
                    .col-10
                        p.mb-0 #{val.info}
                    .col-2.text-end
                        if val.increase
                            i.fas.fa-caret-up
                        else 
                            i.fas.fa-caret-down
    // /Widget Type 1

