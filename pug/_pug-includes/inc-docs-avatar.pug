.row.align-items-center.text-center.mb-5

    - var avatars  = ['avatar-xxl p-2', 'avatar-xl p-2', 'avatar-lg p-1', 'avatar p-1', 'avatar-sm p-1']

    each val, index in avatars
        .col-auto
            img.avatar.mb-3(alt='Image', src=`${path}img/avatar-${index}.jpg`, class=val)
            code.d-block .#{val}
    
    .col-auto 
        span.avatar.p-1.me-2.mb-3
            span.avatar-text(class='avatar-primary-light') A
        code.d-block span.avatar p-1